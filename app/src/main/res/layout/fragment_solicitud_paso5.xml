<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- TÍTULO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solicitud de adopción"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A202C"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revisión y confirmación"
            android:textSize="16sp"
            android:textColor="#718096"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resumen de tu solicitud"
            android:textSize="14sp"
            android:textColor="#A0AEC0"
            android:layout_marginBottom="24dp" />


        <!-- MASCOTA -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_mascota_preview"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:background="#E0E7FF"
                    android:contentDescription="Foto mascota" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tv_nombre_mascota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Luna"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A202C"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_info_mascota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Labrador • 2 años"
                        android:textSize="14sp"
                        android:textColor="#718096" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- INFORMACIÓN PROPORCIONADA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Información proporcionada"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1A202C"
            android:layout_marginBottom="16dp" />


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeColor="#E2E8F0"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <!-- ITEM: Nombre -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nombre completo:"
                        android:textColor="#718096"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_resumen_nombre"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Juan Pérez"
                        android:textStyle="bold"
                        android:textColor="#1A202C"
                        android:textSize="14sp"
                        android:gravity="end" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E2E8F0" />


                <!-- ITEM: Correo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Correo:"
                        android:textColor="#718096"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_resumen_correo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="correo@email.com"
                        android:textStyle="bold"
                        android:textColor="#1A202C"
                        android:textSize="14sp"
                        android:gravity="end" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E2E8F0" />


                <!-- ITEM: Teléfono -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Teléfono:"
                        android:textColor="#718096"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_resumen_telefono"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="987654321"
                        android:textStyle="bold"
                        android:textColor="#1A202C"
                        android:textSize="14sp"
                        android:gravity="end" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E2E8F0" />


                <!-- ITEM: Tipo vivienda -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tipo de vivienda:"
                        android:textColor="#718096"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_resumen_vivienda"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Casa propia"
                        android:textStyle="bold"
                        android:textColor="#1A202C"
                        android:textSize="14sp"
                        android:gravity="end" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- INFO MESSAGE -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#EFF6FF"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"
                    android:contentDescription="Info" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Tu solicitud será revisada en 3-4 días hábiles."
                    android:textColor="#1E40AF"
                    android:textSize="13sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- CHECKBOX -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#F7FAFC">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <CheckBox
                    android:id="@+id/cb_acepta_terminos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Acepto los términos y condiciones"
                    android:textSize="14sp"
                    android:textColor="#2D3748"
                    android:paddingVertical="8dp" />

                <CheckBox
                    android:id="@+id/cb_confirma_veracidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirmo que la información proporcionada es verídica"
                    android:textSize="14sp"
                    android:textColor="#2D3748"
                    android:paddingVertical="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- BOTONES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_anterior"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Anterior"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="15sp"
                android:paddingHorizontal="32dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <Button
                android:id="@+id/btn_confirmar"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Confirmar solicitud"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="15sp"
                android:paddingHorizontal="24dp"
                android:backgroundTint="#C084FC"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
