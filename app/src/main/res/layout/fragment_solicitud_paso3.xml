<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título del paso -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solicitud de adopción"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A202C"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experiencia con mascotas"
            android:textSize="16sp"
            android:textColor="#718096"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Tienes o has tenido mascotas?*"
            android:textSize="14sp"
            android:textColor="#A0AEC0"
            android:layout_marginBottom="24dp" />


        <!-- En caso de tener otras mascotas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En caso de tener otras mascotas describe*"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#2D3748"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Describe tus mascotas actuales (tipo, edad, etc.)"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#2D3748"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextColor="@color/black"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_otras_mascotas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="4"
                android:gravity="top"
                android:textColor="#1A202C"
                android:textColorHint="#6E6E6E"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- Experiencia previa -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experiencia previa con mascotas*"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#2D3748"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Cuéntanos tu experiencia previa"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#2D3748"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextColor="@color/black"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_experiencia_previa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="4"
                android:gravity="top"
                android:textColor="#1A202C"
                android:textColorHint="#6E6E6E"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- Disponibilidad y compromiso -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disponibilidad y compromiso"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#2D3748"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Cuánto tiempo podrás dedicar al cuidado de la mascota?*"
            android:textSize="13sp"
            android:textColor="#718096"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Ejemplo: 2-3 horas diarias"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#2D3748"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextColor="@color/black"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_tiempo_cuidado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="#1A202C"
                android:textColorHint="#6E6E6E"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_anterior"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Anterior"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingHorizontal="32dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/btn_siguiente"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Siguiente"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingHorizontal="32dp"
                android:backgroundTint="#C084FC"
                android:textColor="@color/white"
                app:cornerRadius="10dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
