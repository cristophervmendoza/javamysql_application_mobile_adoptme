<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen grande -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/img_mascota_foto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#E0E0E0" />

            <ImageView
                android:id="@+id/img_favorite_heart"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end|top"
                android:layout_margin="10dp"
                android:padding="6dp"
                android:src="@drawable/ic_heart_outline"
                android:background="@drawable/circle_background_translucent"
                app:tint="@android:color/white" />
        </FrameLayout>

        <!-- Nombre -->
        <TextView
            android:id="@+id/tv_mascota_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:textColor="#222222"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <!-- Raza + Edad -->
        <TextView
            android:id="@+id/tv_mascota_raza_edad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Raza • 2 años"
            android:paddingStart="12dp"
            android:textSize="14sp"
            android:textColor="#777777"
            android:paddingTop="4dp"/>

        <!-- Refugio -->
        <TextView
            android:id="@+id/tv_mascota_ubicacion_refugio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refugio: Grupo Mozita"
            android:paddingStart="12dp"
            android:paddingBottom="10dp"
            android:paddingTop="4dp"
            android:textSize="12sp"
            android:textColor="#999999"/>

        <!-- Botón Ver Más -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ver_mas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver más"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"
            app:cornerRadius="12dp"
            android:backgroundTint="?attr/colorPrimary"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
