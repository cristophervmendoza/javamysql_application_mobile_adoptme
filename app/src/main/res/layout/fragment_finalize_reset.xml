<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="24dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/success_icon_card"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="60dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="?attr/grid_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/success_title"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="32dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_lock_open"
            android:layout_gravity="center"
            app:tint="@color/white"
            android:contentDescription="Success" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/success_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You're All Set!"
        android:textColor="?attr/colorOnSurface"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/success_icon_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/success_message"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/success_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your password has been successfully changed"
        android:textColor="?attr/colorOnSurface"
        android:textSize="14sp"
        android:alpha="0.7"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/success_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_go_homepage"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="48dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_go_homepage"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@drawable/button_login_background"
        android:text="Go to Homepage"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
