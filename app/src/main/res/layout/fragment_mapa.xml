<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- ðŸ”¹ Contenedor del mapa con margen suave -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@drawable/bg_white_rounded">

        <fragment
            android:id="@+id/mapaGoogle"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>


    <TextView
        android:id="@+id/tv_titulo_mapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Refugios_cercanos"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/bg_white_rounded"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:elevation="6dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="20dp" />


    <SearchView
        android:id="@+id/search_refugios"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="top"
        android:layout_marginTop="65dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_white_thin"
        android:queryHint="Buscar refugios..."
        android:elevation="4dp"
        android:iconifiedByDefault="false"
        app:iconifiedByDefault="false"
        app:queryBackground="@android:color/transparent"
        app:searchIcon="@drawable/ic_search_black" />



    <ImageButton
        android:id="@+id/btn_back_home"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_circle_white"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Volver al inicio"
        android:elevation="6dp"
        android:layout_gravity="top|start"
        app:tint="@color/black" />

</FrameLayout>
