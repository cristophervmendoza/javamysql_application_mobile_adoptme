<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="?attr/colorSurface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- TÃ­tulo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Pet Preferences"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Grid de opciones -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="4"
                android:alignmentMode="alignMargins">

                <!-- Dogs -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/chip_dogs"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOnSurface"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/icon_dogs"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_dog"
                            app:tint="?attr/colorOnSurface"
                            android:contentDescription="Dogs" />

                        <TextView
                            android:id="@+id/text_dogs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dogs"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Cats -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/chip_cats"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="?attr/grid_menu">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/icon_cats"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_cat"
                            app:tint="@color/white"
                            android:contentDescription="Cats" />

                        <TextView
                            android:id="@+id/text_cats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cats"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Rabbits -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/chip_rabbits"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOnSurface"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/icon_rabbits"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_rabbit"
                            app:tint="?attr/colorOnSurface"
                            android:contentDescription="Rabbits" />

                        <TextView
                            android:id="@+id/text_rabbits"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rabbits"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Birds -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/chip_birds"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOnSurface"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/icon_birds"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_bird"
                            app:tint="?attr/colorOnSurface"
                            android:contentDescription="Birds" />

                        <TextView
                            android:id="@+id/text_birds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Birds"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Reptiles -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/chip_reptiles"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOnSurface"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/icon_reptiles"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_reptile"
                            app:tint="?attr/colorOnSurface"
                            android:contentDescription="Reptiles" />

                        <TextView
                            android:id="@+id/text_reptiles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reptiles"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Fish -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/chip_fish"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOnSurface"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/icon_fish"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_fish"
                            app:tint="?attr/colorOnSurface"
                            android:contentDescription="Fish" />

                        <TextView
                            android:id="@+id/text_fish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fish"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Primates -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/chip_primates"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOnSurface"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/icon_primates"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_primate"
                            app:tint="?attr/colorOnSurface"
                            android:contentDescription="Primates" />

                        <TextView
                            android:id="@+id/text_primates"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Primates"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Other -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/chip_other"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOnSurface"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/icon_other"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_paw"
                            app:tint="?attr/colorOnSurface"
                            android:contentDescription="Other" />

                        <TextView
                            android:id="@+id/text_other"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Other"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

            <!-- Botones Cancel y OK -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textSize="16sp"
                    android:textColor="?attr/grid_menu"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:layout_marginEnd="16dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_ok"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:background="@drawable/button_login_background"
                    android:text="OK"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
