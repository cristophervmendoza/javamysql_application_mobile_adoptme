<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".View.ui.detalle.MascotaDetalleFragment">

    <!-- APP BAR + IMAGEN -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:contentScrim="?attr/colorPrimary"
            app:titleEnabled="false">

            <ImageView
                android:id="@+id/img_detalle_foto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#DADADA"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- CONTENIDO SCROLLABLE -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Nombre Mascota -->
            <TextView
                android:id="@+id/tv_detalle_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:letterSpacing="0.02"
                android:paddingBottom="6dp"
                tools:text="Luna" />

            <TextView
                android:id="@+id/tv_detalle_especie_raza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#444"
                tools:text="Especie: Perro | Raza: Mestizo" />

            <TextView
                android:id="@+id/tv_detalle_edad_tamano_sexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="6dp"
                android:textColor="#555"
                tools:text="Edad: 2 años | Tamaño: Pequeño | Sexo: Hembra" />

            <TextView
                android:id="@+id/tv_detalle_salud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="6dp"
                android:textColor="#555"
                tools:text="Salud: Vacunado y Desparasitado" />

            <TextView
                android:id="@+id/tv_detalle_ubicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="6dp"
                android:textColor="#555"
                tools:text="Ubicación: San Gabriel, Comas" />


            <!-- HISTORIA -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Historia"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222" />

            <TextView
                android:id="@+id/tv_detalle_historia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="14dp"
                android:textSize="15sp"
                android:lineSpacingExtra="4dp"
                android:background="#F1F1F1"
                android:textColor="#333"
                android:elevation="2dp"
                app:cardCornerRadius="12dp"
                tools:text="Historia de la mascota aquí." />


            <!-- REQUISITOS -->
            <TextView
                android:id="@+id/tvDetalleRequisitos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Requisitos de Adopción"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222" />

            <TextView
                android:id="@+id/tv_detalle_requisitos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="14dp"
                android:textSize="15sp"
                android:lineSpacingExtra="4dp"
                android:background="#F1F1F1"
                android:textColor="#333"
                android:elevation="2dp"
                app:cardCornerRadius="12dp"
                tools:text="Requisitos aquí." />


            <View
                android:layout_width="match_parent"
                android:layout_height="100dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_solicitar_adopcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="100dp"
        android:text="Adoptar Ahora"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/material_dynamic_primary40"
        app:icon="@drawable/ic_heart_outline"
        app:iconTint="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
