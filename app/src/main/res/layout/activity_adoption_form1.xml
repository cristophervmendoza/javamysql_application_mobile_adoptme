<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <!-- Scroll general -->
    <ScrollView
        android:id="@+id/scroll_contenido"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/vista_navegacion_inferior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--  Encabezado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#2B5BA6"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADOPTME"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:letterSpacing="0.1" />
            </LinearLayout>

            <!--  T铆tulo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Solicitud de adopci贸n"
                android:textAlignment="center"
                android:textColor="#2B5BA6"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="12dp"
                android:paddingBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informaci贸n personal"
                android:textAlignment="center"
                android:textColor="#777777"
                android:textSize="13sp"
                android:paddingBottom="12dp" />

            <!--  Contenedor de formulario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Nombre -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombres completos*"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:paddingBottom="4dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:hint="Escribe tu nombre"
                    android:background="@drawable/rounded_input"
                    android:paddingStart="12dp"
                    android:textSize="13sp" />

                <!-- Correo -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correo electr贸nico*"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="4dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:hint="ejemplo@correo.com"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/rounded_input"
                    android:paddingStart="12dp"
                    android:textSize="13sp" />

                <!-- Tel茅fono -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tel茅fono*"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="4dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:hint="N煤mero de contacto"
                    android:inputType="phone"
                    android:background="@drawable/rounded_input"
                    android:paddingStart="12dp"
                    android:textSize="13sp" />

                <!-- Fecha -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de nacimiento*"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="4dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:hint="DD/MM/AAAA"
                    android:inputType="date"
                    android:background="@drawable/rounded_input"
                    android:paddingStart="12dp"
                    android:textSize="13sp" />

                <!-- Direcci贸n -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Direcci贸n completa*"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="4dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:hint="Calle, n煤mero y referencia"
                    android:inputType="textPostalAddress"
                    android:background="@drawable/rounded_input"
                    android:paddingStart="12dp"
                    android:textSize="13sp" />

                <!-- Ciudad y Distrito -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:weightSum="2">

                    <!-- Ciudad -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="6dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ciudad*"
                            android:textColor="#333333"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:paddingBottom="4dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:hint="Ciudad"
                            android:background="@drawable/rounded_input"
                            android:paddingStart="12dp"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <!-- Distrito con Spinner -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="6dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Distrito*"
                            android:textColor="#333333"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:paddingBottom="4dp" />

                        <Spinner
                            android:id="@+id/spinner_distrito"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:background="@drawable/rounded_input"
                            android:paddingStart="12dp"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="16dp">

                <Button
                    android:id="@+id/boton_anterior"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:backgroundTint="#E0E0E0"
                    android:text="Anterior"
                    android:textAllCaps="false"
                    android:textColor="#2B5BA6"
                    android:textSize="13sp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_siguiente"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:backgroundTint="#2B5BA6"
                    android:text="Siguiente"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Indicador de pasos -->
            <LinearLayout
                android:id="@+id/indicador_pasos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/paso_1"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:background="@drawable/circulo_verde"
                    android:textStyle="bold" />

                <View
                    android:layout_width="24dp"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />

                <TextView
                    android:id="@+id/paso_2"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:text="2"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:background="@drawable/circulo_plomo"
                    android:textStyle="bold" />

                <View
                    android:layout_width="24dp"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />

                <TextView
                    android:id="@+id/paso_3"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:text="3"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:background="@drawable/circulo_plomo"
                    android:textStyle="bold" />

                <View
                    android:layout_width="24dp"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />

                <TextView
                    android:id="@+id/paso_4"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:text="4"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:background="@drawable/circulo_plomo"
                    android:textStyle="bold" />

                <View
                    android:layout_width="24dp"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />

                <TextView
                    android:id="@+id/paso_5"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:text="5"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:background="@drawable/circulo_plomo"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Navegaci贸n inferior -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/vista_navegacion_inferior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_nav"
        app:itemBackground="@drawable/bg_nav_item_selected"
        app:itemIconTint="@color/nav_item_colors"
        app:itemTextColor="@color/nav_item_colors"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

